@model IEnumerable<AplikacjaQuizowa.Models.Categorie>

@{
	ViewBag.Title = "Kategorie";
}

@if (TempData["alert"] != null) {
	<div class="alert alert-success alert-dismissible">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<strong>Brawo!</strong> @TempData["alert"]
	</div>
}

<p>
	@Html.ActionLink("Stwórz nową", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.ActionLink("Edytuj", "Edit", new { id = item.CategorieId }) |
				@Html.ActionLink("Szczegóły", "Details", new { id = item.CategorieId }) |
				@Html.ActionLink("Usuń", "Delete", new { id = item.CategorieId })
			</td>
		</tr>
	}

</table>
