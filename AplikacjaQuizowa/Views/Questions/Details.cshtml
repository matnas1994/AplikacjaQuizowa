@model AplikacjaQuizowa.Models.QuestionsViewModel

@{
	ViewBag.Title = "Szczegóły pytania";
}

<div>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Contents)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Contents)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Answer1)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Answer1)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Answer2)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Answer2)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Answer3)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Answer3)
		</dd>


		<dt>
			@Html.DisplayNameFor(model => model.CorrectAnswer)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CorrectAnswer)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Categories)
		</dt>

		<dd>
			@foreach (var item in Model.Categories)
			{
				if (item.Checked)
				{
					<div>
						@item.Name
					</div>
				}

			}
		</dd>

	</dl>
</div>
<p>
	@Html.ActionLink("Edytuj", "Edit", new { id = Model.QuestionId }) |
	@Html.ActionLink("Wróć do listy", "Index")
</p>

<script>
	$("#myDIV").addClass("col-xs-12 col-sm-10 col-md-11 col-sm-offset-1 col-md-offset-1");
</script>